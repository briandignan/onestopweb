# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.OneStop.index
GET		/inventory/list				controllers.OneStop.inventoryList
GET		/customers/list				controllers.OneStop.customerList
GET		/vendors/list				controllers.OneStop.vendorList
GET		/reports					controllers.OneStop.reports
GET		/adminusers/list			controllers.OneStop.settingsUserList
GET		/othersettings				controllers.OneStop.settingsOther

GET		/login						controllers.Application.login
POST	/login						controllers.Application.authenticate
GET		/logout						controllers.Application.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
